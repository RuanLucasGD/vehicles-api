<!DOCTYPE html>
<html lang="pt">

<head>
    <meta charset="utf-8">
    <title>Gerenciamento de vendas</title>
    <link rel="stylesheet" href="/stylesheets/style.css">
    <script src="/js/script.js"></script>
</head>

<body>
    <div class="container">
        <h1>Lista de vendas</h1>
        <% if (vehicleAdded){ %>
            <h2>Veiculo vendido</h2>
            <% } %>
                <table>
                    <thead>
                        <tr>
                            <th>Nome</th>
                            <th>Valor</th>
                            <th>Marca</th>
                        </tr>
                    </thead>
                    <tbody>
                        <form method="post">
                            <% docs.forEach(doc=> { %>
                                <tr>
                                    <td>
                                        <%= doc.name %>
                                    </td>
                                    <td>
                                        <%= doc.value%>
                                    </td>
                                    <td>
                                        <%= doc.brand%>
                                    </td>
                                    <td>
                                        <button type="submit" onclick="setHiddenId('<%= doc._id %>')"
                                            formaction="/vehicles/update" class="btn-editar">Editar</button>
                                        <button type="submit" onclick="setHiddenId('<%= doc._id %>')"
                                            formaction="/vehicles/delete" class="btn-excluir">Excluir</button>
                                    </td>
                                </tr>
                                <% }); %>
                                    <input type="hidden" id="hiddenId" name="hiddenId">
                        </form>
                    </tbody>
                    <tfoot>
                        <tr>
                            <td colspan="4"><a href="/vehicles/add"><button type="button">Novo</button></a></td>
                        </tr>
                    </tfoot>
                </table>
    </div>
</body>

</html>